<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.student.seagalputra.qualitycontrol.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp">

        <ImageView
            android:id="@+id/img_logo"
            android:src="@drawable/ic_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:layout_centerHorizontal="true" />

        <EditText
            android:id="@+id/tx_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_logo"
            android:paddingLeft="21dp"
            android:inputType="textPersonName"
            android:hint="@string/username"
            android:background="@drawable/ic_loginbox"
            android:layout_marginTop="48dp" />

        <EditText
            android:id="@+id/tx_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tx_username"
            android:paddingLeft="21dp"
            android:inputType="textPassword"
            android:hint="@string/password"
            android:background="@drawable/ic_loginbox"
            android:layout_marginTop="24dp" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tx_password"
            android:layout_marginTop="24dp"
            android:text="@string/sign_in"
            android:textAllCaps="false"
            android:textColor="@color/colorAccent"
            android:background="@drawable/ic_btnlogin" />

        <TextView
            android:id="@+id/btn_forgot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_login"
            android:layout_marginTop="8dp"
            android:text="Forgot password?"
            android:textAlignment="center" />
    </RelativeLayout>

</RelativeLayout>

